<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Neko3csTwitterApp.Views.SettingsPage"
             Title="{Binding Title}">
     <ContentPage.Padding>
        <OnPlatform x:TypeArguments="Thickness">
            <On Platform="iOS" Value="0,20,0,0" />
        </OnPlatform>
    </ContentPage.Padding>
    
    <StackLayout HorizontalOptions="CenterAndExpand" Margin="0,20,0,0">
        <Label Text="Twitterへ認証" />
        <Button Text="PINコードを取得" Command="{Binding StartingAuthCommand}" />

        <StackLayout HorizontalOptions="CenterAndExpand" Margin="0,20,0,0">
            <Entry Text="{Binding PinCode}" Placeholder="input pin_code here..." HorizontalOptions="Center" WidthRequest="200" />
            <Button Text="このアプリを承認" Command="{Binding UserAuthCommand}" HorizontalOptions="Center" WidthRequest="100" />
        </StackLayout>

        <StackLayout HorizontalOptions="CenterAndExpand" Margin="0,20,0,0">
            <Image Source="{Binding UserIcon}" IsVisible="{Binding IsVisibleUserIcon}" />
            <Label Text="{Binding UserInfo}" />
        </StackLayout>
    </StackLayout>
</ContentPage>